    subgraph UI[UI Components]
        Button[Button]
        Card[Card]
        Input[Input]
        Select[Select]
        Checkbox[Checkbox]
        RadioGroup[Radio Group]
        Modal[Modal]
        Tabs[Tabs]
        Carousel[Carousel]
